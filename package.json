{
  "name": "ignition-vanilla",
  "version": "0.4.3",
  "description": "A comprehensive interface development toolkit.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixeltrove/ignition-vanilla.git"
  },
  "license": "MIT",
  "scripts": {
    "lint:sass": "stylelint \"source/**/*.scss\" || exit 0",
    "compile:sass": "node-sass source/ignition.scss --output build/styles/ --output-style expanded --precision 8",
    "minify:css": "cleancss build/styles/ignition.css --output build/styles/ignition.min.css",
    "build:css": "npm run lint:sass && npm run compile:sass && npm run minify:css",
    "lint:js": "eslint \"source/**/*.js\" || exit 0",
    "bundle:js": "rollup source/ignition.js --file build/scripts/ignition.js --format esm",
    "clean:js": "terser build/scripts/ignition.js --output build/scripts/ignition.js --beautify",
    "minify:js": "terser build/scripts/ignition.js --output build/scripts/ignition.min.js",
    "build:js": "npm run lint:js && npm run bundle:js && npm run clean:js && npm run minify:js",
    "build": "npm run build:css && npm run build:js",
    "serve": "http-server --silent -c-1"
  },
  "devDependencies": {
    "stylelint": "^9.10.1",
    "node-sass": "^4.7.2",
    "clean-css-cli": "^4.2.1",
    "eslint": "^5.15.3",
    "rollup": "^1.4.0",
    "terser": "^3.17.0",
    "http-server": "^0.11.1"
  }
}
