{
  "name": "ignition-vanilla",
  "version": "0.4.3",
  "description": "A comprehensive interface development toolkit.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixeltrove/ignition-vanilla.git"
  },
  "license": "MIT",
  "scripts": {
    "compile:sass": "node-sass --output build/styles/ source/ignition.scss --output-style expanded --precision 8",
    "minify:css": "cleancss --output build/styles/ignition.min.css build/styles/ignition.css",
    "bundle:js": "rollup source/ignition.js --file build/scripts/ignition.js --format esm",
    "build:all": "npm run compile:sass && npm run minify:css && bundle:js",
    "serve:all": "http-server --silent -c-1"
  },
  "devDependencies": {
    "node-sass": "^4.7.2",
    "clean-css-cli": "^4.2.1",
    "rollup": "^1.4.0",
    "http-server": "^0.11.1"
  }
}
