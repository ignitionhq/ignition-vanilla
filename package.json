{
  "name": "ignition-vanilla",
  "version": "0.4.3",
  "description": "A comprehensive interface development toolkit.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixeltrove/ignition-vanilla.git"
  },
  "license": "MIT",
  "scripts": {
    "lint:sass": "stylelint \"source/**/*.scss\" || exit 0",
    "format:sass": "prettier --write \"source/**/*.scss\"",
    "compile:sass": "node-sass source/ignition.scss --output build/styles/ --output-style expanded --precision 8",
    "clean:css": "prettier --write build/styles/ignition.css",
    "minify:css": "cleancss build/styles/ignition.css --output build/styles/ignition.min.css",
    "build:css": "npm run lint:sass && npm run format:sass && npm run compile:sass && npm run clean:css && npm run minify:css",
    "watch:css": "nodemon --watch source/ --ext scss --exec \"npm run build:css\"",
    "lint:js": "eslint \"source/**/*.js\" || exit 0",
    "format:js": "prettier --write \"source/**/*.js\"",
    "bundle:js": "rollup source/ignition.js --file build/scripts/ignition.js --format esm",
    "clean:js": "terser build/scripts/ignition.js --output build/scripts/ignition.js --beautify && prettier --write build/scripts/ignition.js",
    "minify:js": "terser build/scripts/ignition.js --output build/scripts/ignition.min.js",
    "build:js": "npm run lint:js && npm run format:js && npm run bundle:js && npm run clean:js && npm run minify:js",
    "watch:js": "nodemon --watch source/ --ext js --exec \"npm run build:js\"",
    "build": "npm run build:css && npm run build:js",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "stylelint": "^9.10.1",
    "node-sass": "^4.7.2",
    "prettier": "^1.16.4",
    "clean-css-cli": "^4.2.1",
    "eslint": "^5.15.3",
    "rollup": "^1.4.0",
    "terser": "^3.17.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5"
  }
}
