{
  "name": "spark-vanilla",
  "version": "0.8.0",
  "description": "A comprehensive interface development toolkit.",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixeltrove/spark-vanilla.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "npm run compile:css && npm run minify:css",
    "compile:css": "node-sass --output-style expanded --precision 8 source/spark.scss --output build/styles/",
    "minify:css": "cleancss build/styles/spark.css --output build/styles/spark.min.css",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "nodemon --exec npm run build:css --ext scss --watch source/"
  },
  "devDependencies": {
    "clean-css-cli": "^4.2.1",
    "nodemon": "^1.18.10",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.5"
  }
}
